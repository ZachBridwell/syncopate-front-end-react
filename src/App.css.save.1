.App {
  text-align: center;
}

.dark-theme .App {
  background-color: black !important;

}

.App-logo {
  height: 40vmin;
  pointer-events: none;
}

@media (prefers-reduced-motion: no-preference) {
  .App-logo {
    animation: App-logo-spin infinite 30s linear;
  }
}

.App-header {
  background-color: #282c34;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: calc(10px + 2vmin);
  color: white;
}

.App-link {
  color: #61dafb;
}

@keyframes App-logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

input.message-input {
  padding: 10px;
  border: 1px solid #dadada;
  width: 100%;
}

.chat-history {
  height: calc(100vh - 127px) !important;
  max-height: 100vh !important;
  padding: 10px;
}

.search-container {
  text-align: left;
}

body {
  margin: 0;
  text-align: center;
}

nav {
  display: flex;
  text-align: center;
  background-color: #503d81;
  width: 100%;
  padding: 20px;
  color: #f8f8f8;
}

.content {
  padding: 0.5em;
  margin: 0 auto;
  max-width: 600px;
  font-size: 1.2rem;
  line-height: 1.1;
}


body:not(.dark-theme) {
  background-color: #fff;
  color: #444444;
}

body:not(.dark-theme) nav {
  background-color: #2185d0;
}


.dark-theme {
  background-color: #1f1b24;
  color: #f8f8f8;
}

.dark-theme nav {
  background-color: #332940;
}

.dark-theme code {
  color: red;
}


.dark-theme .ui.massive.borderless.fluid {
    background: black;
    border-bottom: 1px solid #444;
}

.dark-theme .ui.massive.borderless.fluid * {
    color: #fff;
}

.dark-theme .app-wrapper > div > div {
    background: black;
    border-color: #444 !important;
}

.dark-theme .login-form-header {
   color: black; 

}

.dark-theme .ui.primary.button {
    background-color: #000;
}

.dark-theme input {
    background: #000 !important;
    color: #fff;
    border-color: #444 !important;
}

.dark-theme .search.icon {
    color: #fff !important;
}

.ui.modal > div {
    background: #000 !important;
}

.dark-theme #change-password-link {
    color: white;

}

.dark-theme .ui.celled.list {
    background-color: black !important;

}

.dark-theme #friends-container {
    background-color: black !important;

}

.dark-theme #friend-info-container {
   background-color: black;

}
